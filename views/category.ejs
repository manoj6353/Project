          ],
          language: {
            info: "Display _PAGE_ to _END_ of _TOTAL_ entries",
          },
          columnDefs: [
            {
              targets: [3],
              orderable: false,
            },
          ],
          paging: true,
          pagingType: "full_numbers",
          processing: true,
          serverSide: true,
          ajax: {
            url: "/category/categories",
            type: "get",
            // success: function (data) {
