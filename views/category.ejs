  <body>
    <%- include('./admin/header')%>
    <div id="overlay"><span class="loader"></span></div>
    <div class="container">
      <div class="main" id="main">
        <div class="trash">
          <a class="btn btn-success" onclick="addCategory()">Add Category</a>
        </div>
        <br />
